      <%= value %>
      <%= link_to products_path, :class => "close", :"data-dismiss" => "alert", :"aria-label" => "Close" do %>
        <span aria-hidden="true">&times;</span>
      <% end %>
    <% end %>
  <% end %>
<% end %>

